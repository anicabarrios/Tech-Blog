<h2 class="card-header">Sign Up</h2>
<form id="signup-form" class="card-body">
    <div class="mb-3">
        <label for="username-signup" class="form-label">Username</label>
        <input id="username-signup" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="email-signup">Email</label>
        <input  id="email-signup" type="email" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="password-signup">Password</label>
        <input  id="password-signup" type="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
    <a class="btn btn-secondary login-link" href="/login">Log In</a>
</form>

<script src="/js/signup.js"></script>
