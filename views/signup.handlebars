<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-header">Sign Up</h2>
                    <form id="signup-form">
                        <div class="mb-3">
                            <label for="username-signup" class="form-label">Username</label>
                            <input id="username-signup" type="text" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email-signup">Email</label>
                            <input  id="email-signup" type="email" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password-signup">Password</label>
                            <input  id="password-signup" type="password" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-outline-primary">Sign Up</button>
                        <a class="btn btn-outline-secondary login-link" href="/login">Log In</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/signup.js"></script>