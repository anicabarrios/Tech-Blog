<section class="single-post-container">
    {{> post-info post}}

    {{#if loggedIn}}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="comment-container mb-4">
                <h3 class="card-header">Add a Comment</h3>
                <form class="card-body comment-form" id="comment-form">
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comment</label>
                        <input id="comment" name="comment-body" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

    {{/if}}

    {{> comments post.comments}}
</section>

{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}
