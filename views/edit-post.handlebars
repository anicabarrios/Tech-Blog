<h2 class="card-header">Edit Post</h2>
<form class="card-body edit-post-form">
    <div class="mb-3">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{post.title}}" class="form-control"/>
    </div>

    <div class="mb-3">
        <label class="form-label" for="content">Content</label>
        <textarea name="content" class="form-control">{{post.content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update Post</button>
    <button type="button" class="delete-post-btn btn btn-danger">Delete Post</button>
</form>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>